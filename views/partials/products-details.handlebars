{{#if product}}
  <div class="card">
  <div class="card-header">
    {{#each product}}
      <h4><a class="link" href="/api/products/{{id}}">{{name}}</a></h4>
      <p>Price: {{price}}</p>
      <p>Current # in Stock: {{stock}}</p>
      <p>Store Location (1: Chicgao, 2: St. Louis, 3: Milwaukee): {{store_id}}</p>
      <p>Image of Item: <img src="{{filename}}" alt="{{description}}"></p>
    {{/each}}
  </div>
</div>
{{else}}
  <div class="card">
    <div class="card-header">
    <h3>No products found!</h3>
    </div>
  </div>
{{/if}}